<header>
    <div class="container-fluid">
        <div class="border-bottom {{ 'pt-6' if headerNav != false else 'py-6' }}">
            <div class="row align-items-center">
                <div class="col-md-6 col-12 mb-4 mb-sm-0">
                    <!-- Title -->
                    <h1 class="h2 ls-tight">
                        {% if emoji %}<span class="d-inline-block me-3">{{ emoji }}</span>{% endif %}{{ title }}
                    </h1>
                </div>
                <!-- Actions -->
                <div class="col-md-6 col-12 text-md-end">
                    <!-- Avatar group -->
                    <div class="avatar-group">
                        <div class="avatar bg-soft-warning rounded-circle text-warning border border-2 border-solid border-body">
                            JM
                        </div>
                        <div class="avatar bg-soft-primary rounded-circle text-primary border border-2 border-solid border-body">
                            AE
                        </div>
                        <div class="avatar bg-warning rounded-circle text-white">
                            <img alt="..." src="{{ '/img/people/img-3.jpg' | url }}">
                        </div>
                    </div>
                    <!-- Button -->
                    <button type="button" class="btn btn-square btn-neutral shadow-none bg-transparent border-2 border-primary-hover border-dashed rounded-circle ms-4">
                        <i class="bi bi-plus-lg"></i>
                    </button>
                </div>
            </div>
            {% if headerNav != false %}
            <!-- Nav -->
            <ul class="nav nav-tabs overflow-x border-0">
                <li class="nav-item">
                    <a href="#" class="nav-link active">View all</a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">Most recent</a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">Popular</a>
                </li>
            </ul>
            {% endif %}
        </div>
    </div>
</header>
