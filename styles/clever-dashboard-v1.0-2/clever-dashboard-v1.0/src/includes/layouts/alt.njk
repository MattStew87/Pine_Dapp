<!doctype html>
<html lang="{{ site.lang }}">
    <head>
        {% include 'meta.njk' %}
        {% include 'styles.njk' %}
    </head>
    <body>
        <div class="d-flex flex-column flex-lg-row h-lg-full bg-surface-secondary">
            <!-- Sidebar -->
            {% include "partials/sidebar-base.njk" %}

            <!-- Content -->
            <div class="h-screen flex-grow-1 overflow-y-lg-auto">

                {% if not navbar == false %}
                <!-- Navbar -->
                {% include "partials/navbar.njk" %}
                {% endif %}

                <!-- Header -->
                {% set header = ((["components/", header, '.njk'] | join) if header else "components/header.njk")  %}
                {% inject header, {
                    color: 'surface-primary',
                    title: title
                } %}

                <!-- Main -->
                <main class="py-6 bg-surface-secondary">
                    {{ content | safe }}
                </main>
            </div>

        </div>

        {# Scripts #}
        <script src="{{ '/js/main.js' | url }}"></script>
    </body>
</html>
