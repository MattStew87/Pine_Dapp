<!doctype html>
<html lang="{{ site.lang }}">

    <head>
        {% include 'meta.njk' %}
        {% include 'styles.njk' %}
    </head>

    <body>
        <div class="d-flex flex-column flex-lg-row h-lg-full bg-surface-secondary">
            <!-- Sidebar -->
            {% include "partials/sidebar-base.njk" %}

            <!-- Content -->
            <div class="h-screen flex-grow-1 d-flex flex-column flex-1 overflow-y-lg-auto">
                {% if navbar != false %}
                <!-- Navbar -->
                {% include "partials/navbar.njk" %}
                {% endif %}

                {% if header != false %}
                <!-- Navbar -->
                {% include "partials/header.njk" %}
                {% endif %}

                <!-- Main -->
                <main class="flex-grow-1 py-6 bg-surface-secondary overflow-auto">
                    {{ content | safe }}
                </main>
            </div>
        </div>

        <!-- Scripts -->
        <script src="{{ '/js/main.js' | url }}"></script>
    </body>

</html>
