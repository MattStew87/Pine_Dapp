<!doctype html>
<html lang="{{ site.lang }}">
    <head>
        {% include 'meta.njk' %}
        {% include 'styles.njk' %}
        <link href="https://cdn.jsdelivr.net/npm/prism-themes@1.7.0/themes/prism-coldark-dark.min.css" rel="stylesheet">
    </head>
    <body>
        <div class="d-flex flex-column flex-lg-row h-lg-full bg-surface-primary">
            <!-- Sidebar -->
            {% include "partials/sidebar-base.njk" %}

            <!-- Content -->
            <div class="h-screen flex-grow-1 overflow-y-lg-auto">

                <!-- Header -->
                <header>
                    <div class="container-fluid max-w-screen-lg px-lg-24">
                        <div class="pt-6 border-bottom">
                            <div class="row align-items-center">
                                <div class="col-sm-6 col-12 mb-4 mb-sm-0">
                                    <!-- Title -->
                                    <h1 class="font-bolder ls-tight">
                                        {% if emoji %}<span class="d-inline-block me-3">{{ emoji }}</span>{% endif %}{{ title }}
                                    </h1>
                                </div>
                                <!-- Actions -->
                                <div class="col-sm-6 col-12">
                                    <div class="hstack gap-5 justify-content-end">
                                        <a href="https://github.com/webpixels" class="text-lg text-muted text-primary-hover" target="_blank">
                                            <i class="bi bi-github"></i>
                                        </a>
                                        <a href="https://github.com/webpixels/support/discussions/categories/bootstrap-themes" class="btn btn-sm btn-neutral" target="_blank">
                                            <span>Have an issue?</span>
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <!-- Nav -->
                            <ul class="nav nav-tabs overflow-x border-0 mt-4">
                                <li class="nav-item">
                                    <a href="/docs" class="nav-link{{ ' active' if '/docs/' == page.url }}">Getting Started</a>
                                </li>
                                <li class="nav-item">
                                    <a href="/docs/styleguide" class="nav-link{{ ' active' if '/docs/styleguide/' == page.url }}">Style Guide</a>
                                </li>
                                <li class="nav-item d-none">
                                    <a href="/docs/plugins" class="nav-link{{ ' active' if '/docs/plugins/' == page.url }}">Plugins</a>
                                </li>
                                <li class="nav-item">
                                    <a href="/docs/customize" class="nav-link{{ ' active' if '/docs/customize/' == page.url }}">Customize</a>
                                </li>
                                <li class="nav-item">
                                    <a href="/docs/about" class="nav-link{{ ' active' if '/docs/about/' == page.url }}">About</a>
                                </li>
                                <li class="nav-item">
                                    <a href="https://webpixels.io/themes/clever-admin-dashboard-template/releases" class="nav-link" target="_blank">
                                        <i class="bi bi-box-arrow-up-right me-2"></i>Changelog
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </header>

                <!-- Main -->
                <main class="py-6">
                    <div class="container-fluid max-w-screen-lg px-lg-24">
                        <article class="article">
                            {{ content | toc | safe }}
                            {{ content | safe }}
                        </article>
                    </div>
                </main>
            </div>
        </div>

        {# Scripts #}
        <script src="{{ '/js/main.js' | url }}"></script>
    </body>
</html>
