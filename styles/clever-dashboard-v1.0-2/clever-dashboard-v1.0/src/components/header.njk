<header class="bg-{{ color }} border-bottom{% if not header.nav %} py-6{% else %} pt-6{%endif %}">
    <div class="container-fluid">
        <div class="mb-npx">
            <div class="row align-items-center">
                <div class="col-sm-6 col-12 mb-4 mb-sm-0">
                    <!-- Title -->
                    <h1 class="h3 ls-tight">
                        {% if emoji %}<span class="d-inline-block me-3">{{ emoji }}</span>{% endif %}{{ title }}
                    </h1>
                </div>
                <!-- Actions -->
                <div class="col-sm-6 col-12">
                    <div class="hstack gap-2 justify-content-end">
                        <a href="#modalExport" class="btn btn-sm btn-neutral border-base" data-bs-toggle="modal">
                            <span class=" pe-2">
                                <i class="bi bi-download"></i>
                            </span>
                            <span>Export</span>
                        </a>
                        <a href="#{{ offcanvas.id }}" class="btn btn-sm btn-primary" data-bs-toggle="offcanvas">
                            <span class=" pe-2">
                                <i class="bi bi-plus-lg"></i>
                            </span>
                            <span>Create</span>
                        </a>
                    </div>
                </div>
            </div>
            {% if not nav == false %}
            <!-- Nav -->
            <ul class="nav nav-tabs mt-4 overflow-x border-0">
                {% for item in nav %}
                <li class="nav-item ">
                    <a href="#" class="nav-link{% if item.isActive %} active{% endif %}">{{ item.label }}</a>
                </li>
                {% endfor %}
            </ul>
            {% endif %}
        </div>
    </div>
</header>
